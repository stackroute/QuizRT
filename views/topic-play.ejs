<html>
  <head>
    <title>Topic</title>
    <!-- Mobile viewport optimized -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Bootstrap CSS -->
    <script src="/js/jquery-2.1.4.js"></script>

    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/topic-play-style.css" rel="stylesheet">
  </head>

<body>
  <div class="container">

     <div class="content">

    <div class="topic-info">
     <div class="topic-name">
        <h2>Topic Name</h2>
     </div><!--end topic-name-->

     <div class="topic-description">
       <h4>Topic Description in short</h4>
     </div><!--end topic-name-->

  <hr>
  <div class="row topic-column">

    <div class="col-xs-6 topic-icon">

      <img src="/images/topics/cricket.png"  class="img-responsive" alt="">

    </div><!--end topic-icon-->

    <div class="col-xs-6 topic-user">



      <div class="wins row">

          <div class="col-xs-8">
              <h3>#Wins</h3>
          </div>

          <div class="col-xs-4" id="numwins">
              <h3>20</h3>
          </div>


        </div> <!--end wins-->

        <div class="losses row">

          <div class="col-xs-8">
              <h3>#Losses</h3>
          </div>

          <div class="col-xs-4" id="numloss">
              <h3>45</h3>
          </div>


        </div> <!--end losses-->

    </div> <!--end topic-user-->
  </div><!--end row-->
  <hr>
  <div class=" container row level">

    <div class="progress">
  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
  aria-valuemin="0" aria-valuemax="100" id="level-bar" style="width:0%">
    Level <span id="levelnum">2</span> <span id="levelperc">40</span>% Complete (success)
  </div>
</div>

  </div>

  <div class=" row container topic-column2">

    <div class="col-xs-6 leaderboard">
      <a href="/topicsHandler/leaderboard">
        <div>
        <img src="/images/userProfileImages/win.png" alt="">
        </div>
        <label>LeaderBoards</label>
      </a>
    </div><!--end leaderboard-->

    <div class="col-xs-6 followers">
        <div class="col-xs-8 number-followers">
            #Followers:
        </div>
        <div class="col-xs-4 follow">
            <span>990</span>
        </div>
        <button class="btn-primary">Follow!!</button>

    </div><!--end followers-->

  </div><!--end topic-column2-->
  <hr>
</div><!--end topic-info-->

  <div class="play-button">
    <div>
  <a href="/quizPlayer" ><button class="btn-success" >Play ----></button></a>
  </div>

</div><!--end content-->

</div><!--end container-->
<!-- Bootstrap JS -->
<script src="/js/bootstrap.min.js"></script>

<!-- Custom JS -->

<script src="/js/jquery-2.1.4.js"></script>

<script src="/js/topic-play.js"></script>

</body>
</html>
