<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' name='viewport' />
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/quizPlayer2.css">
  <title>Document</title>
</head>
<body>
  <div  ng-app="quizPlayerApp" ng-controller = "rootController"class="container" id="main">
    <div class="navbar">
      <div ng-controller="rankController" class="row">
        <div class="col-sm-5 col-xs-5 pull-left myStatus">
          <h4 class="pull-left"><strong>#1</strong></h4>
          <img src="/images/userProfileImages/akshayk.jpg" alt="" class="img-circle pull-left"/>
          <h5 class="score pull-left" id="top-score">{{topperScore}}</h5>
        </div>
        <div   id="timer" class="col-sm-2 col-xs-2 myStatus">{{time}}</div>

        <div class="pull-right col-sm-5 col-xs-5 myStatus">
          <h5 class="score pull-right" id="myScore">{{myScore}}</h5>
          <img src="/images/userProfileImages/akshay.jpg" alt="" class="img-circle pull-right"/>
          <h4 class="pull-right" id="myRank"><strong>#143</strong></h4>
        </div>
      </div>
    </div><!--end navigation bar -->

    <div ng-controller="statusController" class="row" id="statusInfo">
      <div class="col-xs-4 col-sm-4 myPadding">
        <button type="button" class="btn btn-large btn-success btn-block myPadding" id="correct-answers">Correct 0</button>
      </div>
      <div class="col-xs-3 col-sm-3 myPadding">
        <button type="button" class="btn btn-large btn-danger btn-block myPadding" id="incorrect-answers">Wrong 0</button>
      </div>
      <div class="col-xs-5 col-sm-5 myPadding">
        <button type="button" class="btn btn-large btn-primary btn-block myPadding" id="unanswered">Unattempted 1</button>
      </div>
    </div><!-- others status -->
    <div id="questionData" ng-controller="questionController">
      <div  class="row" id="questionInfo">
        <div class="col-xs-12 col-sm-12" id="questionInfoPanel">
          <h4><strong>{{question}}</strong></h4>
          <img class="questionImage"src="/images/questionImages/akshayk.jpg" alt="">
        </div>
      </div><!-- end question info -->

      <div  class="row myRow">
          <div class ='col-sm-6 col-xs-6 myOptions' ng-repeat="option in options">
              <button ng-disabled="isDisabled" ng-click = "changeColor(option.id,$event)" id="{{option.id}}" class="btn btn-1 btn-large btn-default btn-block">{{option.name}}</button>
          </div>
        <!-- createdDiv= $('<div></div>',{
          class: 'col-sm-6 col-xs-6 myOptions'
        });

        createdOption=$('<button></button>',{
          text: quizData.questions[questionCounter]["option"+optionCounter],
          id:"option"+optionCounter,
          class:"btn btn-1 btn-large btn-default btn-block",
          type: "button"
        }); -->
      </div>
    </div>

  </div><!--End Answers -->

</div><!-- end container -->
<div id="scoreBoard">
  {{currentScore}}
</div>
<script type="text/javascript" src="/js/jquery-1.11.3.js"></script>
<script type="text/javascript" src="/js/angular.min.js"></script>
<script type="text/javascript"  src="/js/bootstrap.min.js"></script>
<script type="text/javascript"  src="/js/quizPlayer2.js"></script>
<script type="text/javascript"  src="/js/socket-io-1.3.7.js"></script>
</body>
</html>
